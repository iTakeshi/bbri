<h1>Log in</h1>

<%= form_tag '/login', class: 'form-horizontal' do %>
  <% if @error_msg %>
    <div class="alert alert-block alert-error">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h4>Login failed.</h4>
      <div><%= @error_msg %></div>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= label_tag :user_email, 'Email address', class: 'control-label' %>
      <div class="controls">
        <%= email_field_tag :user_email %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :password, 'Password', class: 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :remember_me, 'Remember me', class: 'control-label' %>
      <div class="controls">
        <%= check_box_tag :remember_me %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag 'Login', class: 'btn btn-primary' %>
      <div>
        Are you new to Biobrick Reviews &amp; issues? please <%= link_to 'Sign up', '/signup' %><br>
        <%= link_to 'Forget password?', '/reset_password' %>
      </div>
    </div>
  </fieldset>
<% end %>
