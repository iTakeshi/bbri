<li>
  <h3><%= review.part.part_identifier %></h3>
  <h4 class="review-heading"><%= review.review_title %></h4> by <%= review.user.user_name %>
  <div class="review-body" data-review-id="<%= review.id %>">
    <% link_text = (GoodToReviews.where(review_id: review.id, user_id: current_user.id).first ? '<i class="icon-thumbs-up"></i> Like ' : '<i class="icon-thumbs-down"></i> Unlike ') %>
    <%= link_to raw(link_text), "/reviews/#{review.id}/good", class: 'good-to-review', remote: true %>
    <span class="review-good-count"><%= review.good_counter %></span>
    <pre><%= review.review_text %></pre>
  </div>
</li>
