<h1>Register New Parts</h1>

<%= form_tag '/parts/register', class: 'form-horizontal' do %>
  <% if @error %>
    <div class="alert alert-block alert-error">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h4>Error</h4>
      <%= @error %>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= label_tag :year, 'Year', class: 'control-label' %>
      <div class="controls">
        <%= number_field_tag :year %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag 'Register Parts', class: 'btn btn-primary', data: { disable_with: 'processing...' } %>
      <p>It may take several minutes or much longer. Please be patient.</p>
    </div>
  </fieldset>
<% end %>
