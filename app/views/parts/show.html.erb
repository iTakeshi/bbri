<h1><%= @part.part_identifier %></h1>

<h3>Basic Information</h3>
<dl class="dl-horizontal">
  <dt>Year</dt><dd><%= @part.part_year %></dd>
  <dt>Team</dt><dd><%= @part.team.team_name %></dd>
  <dt>Type</dt><dd><%= @part.part_type.type_name %></dd>
</dl>

<a href="#new-review" id="new-review-btn" class="btn btn-primary" data-toggle="modal"><%= Review.where(user_id: current_user.id, part_id: @part.id).first ? 'Edit your review' : 'Post your review!' %></a>
<div class="modal hide fade" id="new-review" style="margin: -290px 0 0 -400px; width: 800px; height: 580px;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Post your review</h3>
  </div>
  <div class="modal-body">
    <%= form_for Review.where(user_id: current_user.id, part_id: @part.id).first_or_initialize, url: "/parts/#{@part.part_identifier}/user_review", html: { class: 'form-horizontal', remote: true, id: 'new-review-form' } do |f| %>
      <fieldset>
        <div class="control-group">
          <div class="controls alert alert-info">Both "Title" and "Text" are required.</div>
        </div>

        <div class="control-group">
          <%= f.label :review_title, 'Title of review', class: 'control-label' %>
          <div class="controls">
            <%= f.text_field :review_title, style: 'width: 25em;' %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :review_text, 'Review text', class: 'control-label' %>
          <div class="controls">
            <%= f.text_area :review_text, style: 'width: 40em; height: 15em;' %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit 'submit', class: 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

<h3>Hottest Reviews</h3>
<ul id="reviews">
  <% @part.reviews.select('*, good_count / (bad_count + 1) AS score').order('score DESC').limit(10).each do |review| %>
    <li>
      <h4 class="review-heading"><%= review.review_title %></h4> by <%= review.user.user_name %>
      <div class="review-body" data-review-id="<%= review.id %>">
        <%= link_to raw('<i class="icon-thumbs-up"></i>'), "/reviews/#{review.id}/good", class: 'review-good', remote: true %>
        <span class="review-good-count"><%= review.good_count %></span>
        <%= link_to raw('<i class="icon-thumbs-down"></i>'), "/reviews/#{review.id}/bad", class: 'review-bad', remote: true %>
        <span class="review-bad-count"><%= review.bad_count %></span>
        <pre><%= review.review_text %></pre>
      </div>
    </li>
  <% end %>
</ul>
