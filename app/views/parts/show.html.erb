<h1><%= @part.part_identifier %></h1>
<h4><%= @part.part_description %></h4>
<div class="row-fluid">
  <div class="span6">
    <h3>Basic Information</h3>
    <dl class="dl-horizontal">
      <dt>Year</dt><dd><%= @part.part_year %></dd>
      <dt>Team</dt><dd><%= @part.team.team_name %></dd>
      <dt>Type</dt><dd><%= @part.part_type.type_name %></dd>
      <dt>parts registry</dt><dd><%= link_to "http://partsregistry.org/Part:#{@part.part_identifier}", "http://partsregistry.org/Part:#{@part.part_identifier}", target: '_blank' %>
    </dl>

    <% if current_user %>
      <a href="#new-review" id="new-review-btn" class="btn btn-primary" data-toggle="modal"><%= Review.where(user_id: current_user.id, part_id: @part.id).first ? 'Edit your review' : 'Post your review!' %></a>

      <% review = Review.where(user_id: current_user.id, part_id: @part.id).first %>
      <% if review %>
        <div id="my-review">
          <% review_class = ( review.is_question ? 'question' : 'review' ) %>
          <h3 class="<%= review_class %>" style="display: inline;"><%= review.review_title %></h3>
          <%= review.user_id == current_user.id ? link_to(raw('<i class="icon-pencil"></i>Edit'), '') : '' %><br>
          To: <%= review.part.part_identifier %>, By: <%= review.user.user_name %>
          <% link_text = (GoodToReviews.where(review_id: review.id, user_id: current_user.id).first ? '<i class="icon-thumbs-down"></i>Unlike ' : '<i class="icon-thumbs-up"></i>Like ') %>
          <%= link_to raw(link_text), "/reviews/#{review.id}/good", class: 'good-to-review', remote: true %>
          <span class="review-good-count"><%= review.good_counter %></span>
          <pre><%= review.review_text %></pre>
        </div>
      <% else %>
        <div id="my-review">
        </div>
      <% end %>

      <div class="modal hide fade" id="new-review" style="margin: -310px 0 0 -400px; width: 800px; height: 620px;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3>Post your review</h3>
        </div>
        <div class="modal-body" style="max-height: 680px;">
          <%= form_for Review.where(user_id: current_user.id, part_id: @part.id).first_or_initialize, url: "/parts/#{@part.part_identifier}/user_review", html: { class: 'form-horizontal', remote: true, id: 'my-review-form' } do |f| %>
            <fieldset>
              <div class="control-group">
                <div class="controls alert alert-info">Both "Title" and "Text" are required.</div>
              </div>

              <div class="control-group">
                <%= f.label :review_title, 'Title of review', class: 'control-label' %>
                <div class="controls">
                  <%= f.text_field :review_title, style: 'width: 25em;' %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :review_text, 'Review text', class: 'control-label' %>
                <div class="controls">
                  <%= f.text_area :review_text, style: 'width: 40em; height: 15em;' %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :is_question, 'Ask for answers?', class: 'control-label' %>
                <div class="controls">
                  <%= f.check_box :is_question %>
                  <span class="control-notes">Check this box if you are asking your question.</span>
                </div>
              </div>

              <div class="form-actions">
                <%= f.submit 'submit', class: 'btn btn-primary' %>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    <% else %>
      <%= link_to 'Log in before posting your review!', '/login' %>
    <% end %>
  </div>

  <div class="span6">
    <h3>Hottest Reviews</h3>
    <% @reviews = @part.reviews.order('good_counter DESC').limit(10) %>
    <ul id="reviews">
      <%= render partial: @reviews %>
    </ul>
  </div>
</div>
